{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"create row" : {
		"prefix":"fr",
		"body" : [
			"@include create-row;"
		]
	},
	"create column" : {
		"prefix":"fc",
		"body" : [
			"@include flex-grid-column($1);"
		]
	},
	"define column size" : {
		"prefix":"fs",
		"body" : [
			"@include flex-grid-size($1);"
		]
	},
	"breakpoint" : {
		"prefix":"bp",
		"body" : [
			"@include breakpoint($1) {",
			"$2",
			"}",
		]
	},
	"&&" : {
		"prefix":"77",
		"body" : [
			"& + & {",
			"$1",
			"}",
		]
	},
	"breakpoint large" : {
		"prefix":"bpl",
		"body" : [
			"@include breakpoint(large) {",
			"$1",
			"}"
		]
	},
	"breakpoint med" : {
		"prefix":"bpm",
		"body" : [
			"@include breakpoint(medium) {",
			"$1",
			"}"
		]
	},
	"color" : {
		"prefix":"cc",
		"body" : [
			"color: color($1);"
		]
	},
	"background color" : {
		"prefix":"bcc",
		"body" : [
			"background-color: color($1);"
		]
	},
	"fill" : {
		"prefix":"fcc",
		"body" : [
			"fill: color($1);"
		]
	},
	"transition" : {
		"prefix":"tr",
		"body" : [
			"@include transition($1);"
		]
	},
	"adhere" : {
		"prefix":"ad",
		"body" : [
			"@include adhere;"
		]
	},
	"hover focus" : {
		"prefix":"hf",
		"body" : [
			"&:hover,",
			"&:focus {",
				"$1",
			"}"
		]
	},
	"before" : {
		"prefix":"bf",
		"body" : [
			"&::before {",
				"position: absolute;",
				"top: 0;",
				"left: 0;",
				"width: 10px;",
				"height: 10px;",
				"$1",
				"content: '';",
			"}"
		]
	},
	"after" : {
		"prefix":"af",
		"body" : [
			"&::after {",
				"position: absolute;",
				"bottom: 0;",
				"right: 0;",
				"width: 10px;",
				"height: 10px;",
				"$1",
				"content: '';",
			"}"
		]
	},
	"import" : {
		"prefix":"im",
		"body" : [
			"@import '$1';"
		]
	},
}

