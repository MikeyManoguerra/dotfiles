{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log();",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"create row": {
		"prefix": "gr",
		"body": [
			"@include make-row();"
		]
	},
	"create column": {
		"prefix": "gc",
		"body": [
			"@include make-col-ready();",
			"@include make-col($1);"
		]
	},
	"column size change": {
		"prefix": "gs",
		"body": [
			"@include make-col($1);"
		]
	},
	"breakpoint": {
		"prefix": "bp",
		"body": [
			"@include media-breakpoint-up($1) {",
			"$2",
			"}",
		]
	},
	"&&": {
		"prefix": "77",
		"body": [
			"& + & {",
			"$1",
			"}",
		]
	},
	"breakpoint small": {
		"prefix": "bps",
		"body": [
			"@include media-breakpoint-up(sm) {",
			"$1",
			"}"
		]
	},
	"breakpoint large": {
		"prefix": "bpl",
		"body": [
			"@include media-breakpoint-up(lg) {",
			"$1",
			"}"
		]
	},
	"breakpoint med": {
		"prefix": "bpm",
		"body": [
			"@include media-breakpoint-up(md) {",
			"$1",
			"}"
		]
	},
	"hover focus": {
		"prefix": "hf",
		"body": [
			"&:hover,",
			"&:focus {",
			"$1",
			"}"
		]
	},
	"before": {
		"prefix": "bf",
		"body": [
			"&::before {",
			"position: absolute;",
			"top: 0;",
			"left: 0;",
			"$1",
			"content: ;",
			"}"
		]
	},
	"before full": {
		"prefix": "bff",
		"body": [
			"&::before {",
			"position: absolute;",
			"top: 0;",
			"left: 0;",
			"width: 100%;",
			"height: 100%;",
			"$1",
			"content: ;",
			"}"
		]
	},
	"after": {
		"prefix": "bf",
		"body": [
			"&::before {",
			"position: absolute;",
			"bottom: 0;",
			"right: 0;",
			"width: 100%;",
			"height: 100%;",
			"$1",
			"content: ;",
			"}"
		]
	},
	"after full": {
		"prefix": "aff",
		"body": [
			"&::after {",
			"position: absolute;",
			"bottom: 0;",
			"right: 0;",
			"width: 100%;",
			"height: 100%;",
			"$1",
			"content: ;",
			"}"
		]
	},
	"after center y": {
		"prefix": "afcy",
		"body": [
			"&::after {",
			"position: absolute;",
			"bottom: 50%;",
			"right: 0;",
			"width: 50px;",
			"height: 50px;",
			"transform: translateY(50%);",
			"$1",
			"content: ;",
			"}"
		]
	},
	"after center x": {
		"prefix": "afcx",
		"body": [
			"&::after {",
			"position: absolute;",
			"bottom: 0;",
			"right: 50%;",
			"width: 50px;",
			"height: 50px;",
			"transform: translateX(50%);",
			"$1",
			"content: ;",
			"}"
		]
	},
	"import": {
		"prefix": "im",
		"body": [
			"@import ;"
		]
	},
}
